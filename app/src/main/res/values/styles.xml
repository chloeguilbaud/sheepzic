<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorPrimaryNightDark</item>
    </style>

    <style name="Sheepzic" parent="AppTheme" />
    <style name="Sheepzic.Component" />

    <style name="Sheepzic.Component.NumberPicker">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sheepzic.Component.NumberPickerDivider">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sheepzic.Component.TimerValue">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Sheepzic.Component.TimerValueDivider">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Sheepzic.Component.TimeSuggestionButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:backgroundTint">@color/colorTimeSuggestionButtonBackground</item>
    </style>


    <style name="Sheepzic.Component.Preferences"/>

    <style name="Sheepzic.Component.Preferences.Title" >
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/colorPrimaryNightText</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Sheepzic.Component.Preferences.SubTitle" >
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Sheepzic.Component.Preferences.SwitchLabel" >
        <item name="android:textColor">@color/colorPrimaryNightText</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>
