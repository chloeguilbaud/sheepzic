<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <TextView
        android:id="@+id/component_countDownTimer_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/component_timePicker_numberPickerDivider"
        android:theme="@style/Sheepzic.Component.NumberPickerDivider" />

    <TextView
        android:id="@+id/component_countDownTimer_minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/component_timePicker_numberPickerDivider"
        android:theme="@style/Sheepzic.Component.NumberPickerDivider" />

    <TextView
        android:id="@+id/component_countDownTimer_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>